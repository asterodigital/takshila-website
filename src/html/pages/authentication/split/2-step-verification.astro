---
import AuthenticationLayout from '../../../layouts/admin/authentication-layout.astro'
import Branding from '../../../components/common/branding.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<AuthenticationLayout
  title="2-Step Verification"
  description="2-Step verification example"
  currentPath="authentication/split/2-step-verification"
>
  <div class="row m-0 min-vh-100">
    <div class="col-md-6 p-4 my-auto d-flex justify-content-center">
      <!-- Theme Toggle Button -->
      <button
        class="btn p-0 border-0 shadow-none position-absolute top-0 mx-4 my-2 split-theme-toggler"
        id="theme-toggle"
      >
        <i class="ri-sun-line fs-5"></i>
      </button>
      <div>
        <!-- Company Logo and Name -->
        <Branding brandName={false} />
        <h1 class="h4 text-center mb-3">2-Step Verification</h1>
        <div class="card mx-auto" style="max-width: 400px">
          <div class="card-body p-2">
            <div class="text-start fs-2 mb-2">
              <i class="ri-key-line"></i>
            </div>
            <p class="text-start text-muted mb-4">
              For added security, please enter your phone number and verify the code sent to it.
            </p>
            <!-- 2-Step Verification Form Form -->
            <form class="text-start">
              <div class="mb-3">
                <label for="country" class="form-label">Select Country</label>
                <select class="form-control" id="country" required>
                  <option value="">Select Country</option>
                  <option value="US">United States (+1)</option>
                  <option value="GB">United Kingdom (+44)</option>
                  <option value="IN">India (+91)</option>
                  <option value="CA">Canada (+1)</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input
                  type="tel"
                  class="form-control"
                  id="phone"
                  placeholder="Enter your phone number"
                  pattern="[0-9]{10}"
                  autocomplete="tel"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary w-100">Send Verification Code</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 d-none d-md-block p-0 m-0">
      <img
        src={getAssetPrefix('/assets/svg/placeholder.svg')}
        class="img-fluid"
        alt=""
        style="object-fit: cover; width: 100%; height: 100%;"
      />
    </div>
  </div>
</AuthenticationLayout>
