                </li>
              </ul>

              <!-- Move buttons to the left end -->
              <ul class="navbar-nav ms-auto">
                <li class="nav-item me-2 mb-2 mb-lg-0">
                  <a href="#" class="btn btn-secondary px-2">
                    <i class="ri-login-box-line"></i> Login
                  </a>
