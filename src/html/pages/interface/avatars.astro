---
import AdminLayout from '../../layouts/admin/admin-layout.astro'
import ComponentPreview from '../../components/component-preview/component-preview.astro'
import Toc from '../../components/toc/toc.astro'
import PageHeader from '../../components/common/page-header.astro'
import { getAssetPrefix, getPathPrefix } from '../../../utils/path.js'

// Page header configuration with navigation breadcrumbs
const pageHeaderConfig = {
  title: 'Avatars',
  breadcrumbs: [
    { label: 'Dashboard', href: getPathPrefix('/dashboard') },
    { label: 'Interface', href: getPathPrefix('/interface') },
    { label: 'Avatars', class: 'active' }
  ]
}

// Avatar with initials examples
const avatarWithInitials = `<div class="d-flex align-items-center">
    <span class="avatar avatar-xl rounded-circle bg-primary text-light me-2">
        <span>XL</span>
    </span>

    <span class="avatar avatar-lg rounded-circle bg-success text-light me-2">
        <span>LG</span>
    </span>

    <span class="avatar avatar-md rounded-circle bg-warning text-light me-2">
        <span>MD</span>
    </span>

    <span class="avatar avatar-sm rounded-circle bg-danger text-light">
        <span>SM</span>
    </span>
</div>
`
// Avatar with images examples
const avatarWithImages = `<div class="d-flex align-items-center">
    <span class="avatar avatar-xl me-2">
        <img src="${getAssetPrefix('/assets/img/avatars/avatar1.jpg')}" alt="Avatar" class="img-fluid rounded-circle">
    </span>

    <span class="avatar avatar-lg me-2">
        <img src="${getAssetPrefix('/assets/img/avatars/avatar7.jpg')}" alt="Avatar" class="img-fluid rounded-circle">
    </span>

    <span class="avatar avatar-md me-2">
        <img src="${getAssetPrefix('/assets/img/avatars/avatar6.jpg')}" alt="Avatar" class="img-fluid rounded-circle">
    </span>

    <span class="avatar avatar-sm me-2">
        <img src="${getAssetPrefix('/assets/img/avatars/avatar2.jpg')}" alt="Avatar" class="img-fluid rounded-circle">
    </span>
</div>
`

// Shared preview configuration for consistent component display
const previewConfig = {
  cssCode: '',
  jsCode: ''
}
---

<AdminLayout
  title="Avatars"
  description="Interactive avatar components for user profiles and personalization"
  currentPath="interface/avatars"
  enableComponentPreview={true}
>
  <PageHeader {...pageHeaderConfig} />
  <div class="row">
    <div class="col-lg-9 col-xl-9 order-1 order-lg-0">
      <div class="row">
        <div class="col-12">
          <p class="my-0">
            Avatars are versatile UI components designed to visually represent users, profiles, or
            entities within an interface.
          </p>
        </div>
      </div>
      <div class="row js-toc-content">
        <div class="col-12">
          <div class="my-3">
            <h3 class="mb-0" id="avatars-with-initials">Avatars with Initials</h3>
            <p class="py-2">
              Lorem ipsum dolor sit amet consectetur, adipisicing elit. Odio, deleniti.
            </p>

            <ComponentPreview
              title="Avatars with Initials"
              height="200px"
              component={avatarWithInitials}
              htmlCode={avatarWithInitials}
              {...previewConfig}
            />
          </div>

          <div class="my-3">
            <h3 class="mb-0" id="avatars-with-images">Avatars with Images</h3>
            <p class="py-2">
              Lorem ipsum dolor sit amet consectetur, adipisicing elit. Odio, deleniti.
            </p>

            <ComponentPreview
              title="Avatars with Images"
              height="200px"
              component={avatarWithImages}
              htmlCode={avatarWithImages}
              {...previewConfig}
            />
          </div>
        </div>
      </div>
    </div>
    <Toc />
  </div>
</AdminLayout>
