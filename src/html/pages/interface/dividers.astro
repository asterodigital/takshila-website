---
import AdminLayout from '../../layouts/admin/admin-layout.astro'
import ComponentPreview from '../../components/component-preview/component-preview.astro'
import Toc from '../../components/toc/toc.astro'
import PageHeader from '../../components/common/page-header.astro'
import { getPathPrefix } from '../../../utils/path.js'

// Page header configuration with navigation breadcrumbs
const pageHeaderConfig = {
  title: 'Dividers',
  breadcrumbs: [
    { label: 'Dashboard', href: getPathPrefix('/dashboard') },
    { label: 'Interface', href: getPathPrefix('/interface') },
    { label: 'Dividers', class: 'active' }
  ]
}

// Divider examples
const code_1 = `<span>Some text goes here.</span>
<div class="divider my-4"></div>
<span>More text goes here.</span>
`

const code_2 = `<div class="divider my-4"></div>
<div class="divider border-2 my-4"></div>
<div class="divider border-3 my-4"></div>
<div class="divider border-4 my-4"></div>
<div class="divider border-5 my-4"></div>
`

const code_3 = `<div class="divider my-4"></div>
<div class="divider primary my-4"></div>
<div class="divider secondary my-4"></div>
<div class="divider success my-4"></div>
<div class="divider danger my-4"></div>
<div class="divider warning my-4"></div>
<div class="divider info my-4"></div>
`

const code_4 = `<div class="divider-dotted primary my-4"></div>
<div class="divider-dashed primary my-4"></div>
`

const code_5 = `<div class="separator my-4">Separator</div>
<div class="separator primary my-4">Colored Separator</div>
<div class="separator-dashed primary my-4">Dashed Separator</div>
<div class="separator-dotted primary my-4">Dotted Separator</div>
<div class="separator primary my-4"><h4>Heading</h4></div>
<div class="separator success my-4"><i class="ri-box-3-fill text-success"></i></div>
<div class="separator danger my-4"><i class="ri-heart-fill text-danger"></i></div>
`

// Shared preview configuration for consistent component display
const previewConfig = {
  cssCode: '',
  jsCode: ''
}
---

<AdminLayout
  title="Dividers"
  description="Divider components for tailoring the page structure."
  currentPath="interface/dividers"
  enableComponentPreview={true}
>
  <PageHeader {...pageHeaderConfig} />
  <div class="row">
    <div class="col-lg-9 col-xl-9 order-1 order-lg-0">
      <div class="row">
        <div class="col-12">
          <p class="my-0">
            Divider components are flexible UI elements designed to help organize and separate
            content, allowing for customized page structure and improved visual flow.
          </p>
        </div>
      </div>
      <div class="row js-toc-content">
        <div class="col-12">
          <div class="my-3">
            <h3 class="mb-0" id="example">Example</h3>
            <p class="py-2">
              A simple horizontal line used to separate content and organize sections on the page.
            </p>

            <ComponentPreview
              title="Example"
              height="200px"
              component={code_1}
              htmlCode={code_1}
              {...previewConfig}
            />
          </div>
          <div class="my-3">
            <h3 class="mb-0" id="sizes">Sizes</h3>
            <p class="py-2">
              The height and thickness of a divider can be customized to suit different design
              needs.
            </p>

            <ComponentPreview
              title="Sizes"
              height="250px"
              component={code_2}
              htmlCode={code_2}
              {...previewConfig}
            />
          </div>
          <div class="my-3">
            <h3 class="mb-0" id="colors">Colors</h3>
            <p class="py-2">
              Dividers can be styled with various colors to match the overall theme or provide
              visual contrast.
            </p>

            <ComponentPreview
              title="Colors"
              height="300px"
              component={code_3}
              htmlCode={code_3}
              {...previewConfig}
            />
          </div>
          <div class="my-3">
            <h3 class="mb-0" id="styles">Styles</h3>
            <p class="py-2">
              Dividers can be styled with dotted or dashed lines for a more decorative and unique
              appearance.
            </p>

            <ComponentPreview
              title="Styles"
              height="150px"
              component={code_4}
              htmlCode={code_4}
              {...previewConfig}
            />
          </div>
          <div class="my-3">
            <h3 class="mb-0" id="separators">Separators</h3>
            <p class="py-2">
              Separators are versatile design elements used to visually divide content with
              customizable styles, such as solid, dashed, or dotted lines, and optional text in the
              center for added clarity or emphasis.
            </p>

            <ComponentPreview
              title="Separators"
              height="450px"
              component={code_5}
              htmlCode={code_5}
              {...previewConfig}
            />
          </div>
        </div>
      </div>
    </div>
    <Toc />
  </div>
</AdminLayout>
